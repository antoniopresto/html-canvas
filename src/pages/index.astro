---

<Layout>
  <div class="wrapper">
    <div class="container" id="slider-container">
      <canvas id="slider-canvas" height="400" width="640"></canvas>
    </div>
  </div>
</Layout>

<style>
  :root {
    --spacing-2: 2rem;
  }
  .wrapper {
    width: 100vw;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .container {
    margin: 0 auto;
  }
  #slider-canvas {
    display: block;
    outline: 1px solid #ccc;
    cursor: grab;
    margin: 8px 0;
    position: relative;
  }
</style>

<script>
  import { createSlider } from '../helpers/slider';

  createSlider({
    canvasId: 'slider-canvas',
    images: [
      // prettier-ignore
      {src: '/slides/0.jpg'},
      { src: '/slides/1.jpg' },
      { src: '/slides/2.jpg' },
      { src: '/slides/3.jpg' },
    ],
  });
</script>
